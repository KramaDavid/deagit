#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i,n = 50;
    float x;
    float sum=1,temp=1;
    printf("Enter the value for x : ");
    scanf("%f", &x);
    for(i=1;i<=n;i++)
    {
        temp=temp*x/i;
        sum=sum+temp;
    }
    printf("\nThe Exponential Value of %f = %f", x, sum);


    return 0;
}
